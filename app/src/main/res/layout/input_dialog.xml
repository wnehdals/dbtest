<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/input_dialog_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="추가"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_input_name_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="이름"
            app:layout_constraintTop_toBottomOf="@+id/input_dialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_input_name_kcal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="kcal"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/et_input_name_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_input_name_confirm"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:text="확인"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_input_name_kcal"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>